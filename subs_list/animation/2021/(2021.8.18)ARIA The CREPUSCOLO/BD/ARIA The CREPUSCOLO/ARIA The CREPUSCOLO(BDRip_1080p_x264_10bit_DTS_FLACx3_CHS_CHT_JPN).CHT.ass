Dialogue: 0,0:33:31.10,0:33:35.00,com_hb,#1,0,0,0,,{\fs25\1c&Ha9c5c3\3c&Hffffff&\4c&Ha9c5c3&\shad3\4a&H90&\move(787.41,257.152,731.79,257.152,0,4200)\fsp20\b1}公演最終日
Dialogue: 0,0:33:32.01,0:33:35.20,01_jpn,#1,0,0,0,,今日もアテナさんのコンサート、満席みたいですね
Dialogue: 0,0:33:32.01,0:33:35.20,02_chi,#1,0,0,0,,聽說雅典娜的演唱會今天也是滿座啊
Dialogue: 0,0:33:35.30,0:33:38.00,com_hb,#1,0,0,0,,{\fs80\1c&Ha9c5c3\3c&Ha9c5c3\bord0\shad10\4c&Ha9e1dd&\4a&H55\move(462.744,403.819,563.123,403.819,)\fsp80\b1}公演最終日
Dialogue: 0,0:33:35.59,0:33:38.44,01_jpn,#1,0,0,0,,はい、特に今日は最終日ですし
Dialogue: 0,0:33:35.59,0:33:38.44,02_chi,#1,0,0,0,,是啊，尤其今天還是演唱會最後一天
Dialogue: 0,0:33:38.74,0:33:40.31,01_jpn,#1,0,0,0,,昼公演だけですから
Dialogue: 0,0:33:38.74,0:33:40.31,02_chi,#1,0,0,0,,只有白天才有表演
Dialogue: 0,0:33:41.05,0:33:41.98,01_jpn,#1,0,0,0,,昨日行ったけど
Dialogue: 0,0:33:41.05,0:33:41.98,02_chi,#1,0,0,0,,我們昨天也去聽了
Dialogue: 0,0:33:42.18,0:33:44.17,01_jpn,#1,0,0,0,,本当に素晴らしかった
Dialogue: 0,0:33:42.18,0:33:44.17,02_chi,#1,0,0,0,,真的是太棒了
Dialogue: 0,0:33:44.45,0:33:46.05,01_jpn,#1,0,0,0,,アリスさんは行かれたんですか？
Dialogue: 0,0:33:44.45,0:33:46.05,02_chi,#1,0,0,0,,愛莉絲去過了嗎？
Dialogue: 0,0:33:47.59,0:33:49.08,01_jpn,#1,0,0,0,,ああ、いいえ
Dialogue: 0,0:33:47.59,0:33:49.08,02_chi,#1,0,0,0,,啊，我沒去
Dialogue: 0,0:33:49.35,0:33:50.65,01_jpn,#1,0,0,0,,そうですか
Dialogue: 0,0:33:49.35,0:33:50.65,02_chi,#1,0,0,0,,這樣啊
Dialogue: 0,0:33:50.76,0:33:52.50,01_jpn,#1,0,0,0,,お忙しいですもんね
Dialogue: 0,0:33:50.76,0:33:52.50,02_chi,#1,0,0,0,,您畢竟工作繁忙
Dialogue: 0,0:34:21.97,0:34:23.61,01_jpn,#1,0,0,0,,お疲れ様でした
Dialogue: 0,0:34:21.97,0:34:23.61,02_chi,#1,0,0,0,,謝謝惠顧
Dialogue: 0,0:34:23.61,0:34:25.12,01_jpn,#1,0,0,0,,ありがとう
Dialogue: 0,0:34:23.61,0:34:25.12,02_chi,#1,0,0,0,,謝謝
Dialogue: 0,0:34:25.22,0:34:26.85,01_jpn,#1,0,0,0,,猫さんもありがとうね
Dialogue: 0,0:34:25.22,0:34:26.85,02_chi,#1,0,0,0,,也謝謝貓社長啦~
Dialogue: 0,0:34:35.43,0:34:37.05,01_jpn,#1,0,0,0,,花火楽しみ
Dialogue: 0,0:34:35.43,0:34:37.05,02_chi,#1,0,0,0,,真期待煙花表演
Dialogue: 0,0:34:37.43,0:34:39.33,01_jpn,#1,0,0,0,,あ、始まっちゃう
Dialogue: 0,0:34:37.43,0:34:39.33,02_chi,#1,0,0,0,,啊，要開始了
Dialogue: 0,0:34:39.33,0:34:40.25,01_jpn,#1,0,0,0,,行くわよ
Dialogue: 0,0:34:39.33,0:34:40.25,02_chi,#1,0,0,0,,快走吧
Dialogue: 0,0:34:40.36,0:34:40.71,01_jpn,#1,0,0,0,,うん
Dialogue: 0,0:34:40.36,0:34:40.71,02_chi,#1,0,0,0,,嗯
Dialogue: 0,0:34:41.55,0:34:42.79,01_jpn,#1,0,0,0,,ありがとうございます
Dialogue: 0,0:34:41.55,0:34:42.79,02_chi,#1,0,0,0,,期待您的下次光臨
