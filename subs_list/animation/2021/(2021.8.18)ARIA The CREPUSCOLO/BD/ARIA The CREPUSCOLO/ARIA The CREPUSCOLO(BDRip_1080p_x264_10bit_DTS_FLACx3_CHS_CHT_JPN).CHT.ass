Dialogue: 0,0:05:11.29,0:05:12.17,01_jpn,#1,0,0,0,,ありがとう
Dialogue: 0,0:05:11.29,0:05:12.17,02_chi,#1,0,0,0,,謝謝
Dialogue: 0,0:05:12.45,0:05:13.56,01_jpn,#1,0,0,0,,あたっかい
Dialogue: 0,0:05:12.45,0:05:13.56,02_chi,#1,0,0,0,,熱乎乎的
Dialogue: 0,0:05:14.82,0:05:15.45,01_jpn,#1,0,0,0,,ねーねー
Dialogue: 0,0:05:14.82,0:05:15.45,02_chi,#1,0,0,0,,快看那邊
Dialogue: 0,0:05:18.99,0:05:19.92,01_jpn,#1,0,0,0,,お客様！？
Dialogue: 0,0:05:18.99,0:05:19.92,02_chi,#1,0,0,0,,客人！？
Dialogue: 0,0:05:24.13,0:05:25.94,01_jpn,#1,0,0,0,,あれは、もしや
Dialogue: 0,0:05:24.13,0:05:25.94,02_chi,#1,0,0,0,,那邊那位，難道是
Dialogue: 0,0:05:26.64,0:05:28.66,01_jpn,#1,0,0,0,,アリシア・フローレンス
Dialogue: 0,0:05:26.64,0:05:28.66,02_chi,#1,0,0,0,,艾莉西亞·佛羅倫斯
Dialogue: 0,0:05:28.82,0:05:30.80,01_jpn,#1,0,0,0,,アリシアさんを見たら何だっけ
Dialogue: 0,0:05:28.82,0:05:30.80,02_chi,#1,0,0,0,,看見艾莉西亞的話要做什麼來著
Dialogue: 0,0:05:30.80,0:05:33.06,01_jpn,#1,0,0,0,,三回願い事を言ったら叶うのよ
Dialogue: 0,0:05:30.80,0:05:33.06,02_chi,#1,0,0,0,,對她許願三次就能心想事成喲
Dialogue: 0,0:05:33.11,0:05:34.18,01_jpn,#1,0,0,0,,写真、写真
Dialogue: 0,0:05:33.11,0:05:34.18,02_chi,#1,0,0,0,,快拍照，拍照
Dialogue: 0,0:05:34.66,0:05:35.16,01_jpn,#1,0,0,0,,写真
Dialogue: 0,0:05:34.66,0:05:35.16,02_chi,#1,0,0,0,,對，拍照留念
Dialogue: 0,0:05:35.16,0:05:36.81,01_jpn,#1,0,0,0,,お守りにしよう
Dialogue: 0,0:05:35.16,0:05:36.81,02_chi,#1,0,0,0,,可以拿來當護身符
Dialogue: 0,0:05:38.25,0:05:39.77,01_jpn,#1,0,0,0,,お疲れ様でした
Dialogue: 0,0:05:38.25,0:05:39.77,02_chi,#1,0,0,0,,謝謝惠顧
Dialogue: 0,0:05:40.43,0:05:41.91,01_jpn,#1,0,0,0,,Arrivederci
Dialogue: 0,0:05:40.43,0:05:41.91,02_chi,#1,0,0,0,,再見
Dialogue: 0,0:05:42.17,0:05:43.67,01_jpn,#1,0,0,0,,ありがとうございました
Dialogue: 0,0:05:42.17,0:05:43.67,02_chi,#1,0,0,0,,期待您的下次光臨
Dialogue: 0,0:05:44.22,0:05:46.12,03_jpn,#1,0,0,0,,最強のお守りゲット
Dialogue: 0,0:05:44.22,0:05:46.12,04_chi,#1,0,0,0,,最強的護身符到手嘍
Dialogue: 0,0:05:46.15,0:05:48.31,03_jpn,#1,0,0,0,,私達、今日めっちゃラッキーじゃない？
Dialogue: 0,0:05:46.15,0:05:48.31,04_chi,#1,0,0,0,,我們今天真走運啊
Dialogue: 0,0:05:47.31,0:05:49.47,01_jpn,#1,0,0,0,,アイちゃん、次のお客様は…
Dialogue: 0,0:05:47.31,0:05:49.47,02_chi,#1,0,0,0,,小愛，下一批客人呢
Dialogue: 0,0:05:49.85,0:05:51.02,01_jpn,#1,0,0,0,,次のお客様は
Dialogue: 0,0:05:49.85,0:05:51.02,02_chi,#1,0,0,0,,下一批客人
Dialogue: 0,0:05:51.05,0:05:53.19,01_jpn,#1,0,0,0,,到着予定が変更になってます
Dialogue: 0,0:05:51.05,0:05:53.19,02_chi,#1,0,0,0,,修改了預約時間
Dialogue: 0,0:05:53.27,0:05:54.66,01_jpn,#1,0,0,0,,あ、そうだった
Dialogue: 0,0:05:53.27,0:05:54.66,02_chi,#1,0,0,0,,啊，差點忘了
Dialogue: 0,0:05:54.91,0:05:57.30,01_jpn,#1,0,0,0,,じゃあ、お昼どこかに食べにいく？
Dialogue: 0,0:05:54.91,0:05:57.30,02_chi,#1,0,0,0,,那我們找個地方去吃午飯吧
Dialogue: 0,0:05:57.38,0:05:58.99,01_jpn,#1,0,0,0,,いいえ、行かないです
Dialogue: 0,0:05:57.38,0:05:58.99,02_chi,#1,0,0,0,,不行，我不去
Dialogue: 0,0:05:59.11,0:06:00.12,01_jpn,#1,0,0,0,,ええーー
Dialogue: 0,0:05:59.11,0:06:00.12,02_chi,#1,0,0,0,,哎~~
Dialogue: 0,0:06:02.40,0:06:03.86,01_jpn,#1,0,0,0,,頼もう
Dialogue: 0,0:06:02.40,0:06:03.86,02_chi,#1,0,0,0,,有人嗎
Dialogue: 0,0:06:05.07,0:06:06.29,01_jpn,#1,0,0,0,,待ってたよ
Dialogue: 0,0:06:05.07,0:06:06.29,02_chi,#1,0,0,0,,正等你們來呢
Dialogue: 0,0:06:06.79,0:06:08.11,01_jpn,#1,0,0,0,,仕事終わった？
Dialogue: 0,0:06:06.79,0:06:08.11,02_chi,#1,0,0,0,,工作都處理完了？
Dialogue: 0,0:06:08.29,0:06:09.59,01_jpn,#1,0,0,0,,丁度昼休み
Dialogue: 0,0:06:08.29,0:06:09.59,02_chi,#1,0,0,0,,正好是午休時間
Dialogue: 0,0:06:09.87,0:06:11.44,01_jpn,#1,0,0,0,,あずさちゃんとアーニャちゃん
Dialogue: 0,0:06:09.87,0:06:11.44,02_chi,#1,0,0,0,,小梓，阿妮亞
Dialogue: 0,0:06:11.56,0:06:12.67,01_jpn,#1,0,0,0,,いらっしゃい
Dialogue: 0,0:06:11.56,0:06:12.67,02_chi,#1,0,0,0,,歡迎
Dialogue: 0,0:06:56.21,0:06:59.08,01_jpn,#1,0,0,0,,まさか、ケッチャプなし
Dialogue: 0,0:06:56.21,0:06:59.08,02_chi,#1,0,0,0,,不會吧，竟然不加番茄醬
Dialogue: 0,0:06:59.08,0:07:01.08,01_jpn,#1,0,0,0,,なんか最近元気ないよね
Dialogue: 0,0:06:59.08,0:07:01.08,02_chi,#1,0,0,0,,她最近好像沒什麼精神
Dialogue: 0,0:07:01.47,0:07:02.94,01_jpn,#1,0,0,0,,悩みとかあるのかな
Dialogue: 0,0:07:01.47,0:07:02.94,02_chi,#1,0,0,0,,是不是有什麼煩惱啊
Dialogue: 0,0:07:03.04,0:07:04.21,01_jpn,#1,0,0,0,,聞いてみれば、杏？
Dialogue: 0,0:07:03.04,0:07:04.21,02_chi,#1,0,0,0,,杏，你去問問吧
Dialogue: 0,0:07:04.57,0:07:06.90,01_jpn,#1,0,0,0,,ええ、アトラちゃん聞いてよ
Dialogue: 0,0:07:04.57,0:07:06.90,02_chi,#1,0,0,0,,誒~要問你去問啊，亞朵拉
Dialogue: 0,0:07:07.84,0:07:09.99,01_jpn,#1,0,0,0,,もし聞いてわれわれ凡人には
Dialogue: 0,0:07:07.84,0:07:09.99,02_chi,#1,0,0,0,,要是問到了我們凡人
Dialogue: 0,0:07:10.10,0:07:11.97,01_jpn,#1,0,0,0,,わからない悩みだったりしたらさ
Dialogue: 0,0:07:10.10,0:07:11.97,02_chi,#1,0,0,0,,理解不了的煩惱可怎麼辦
Dialogue: 0,0:07:12.08,0:07:13.06,01_jpn,#1,0,0,0,,ありえる
Dialogue: 0,0:07:12.08,0:07:13.06,02_chi,#1,0,0,0,,很有可能
Dialogue: 0,0:07:13.06,0:07:15.99,01_jpn,#1,0,0,0,,水先案内人の歴史に残る天才だし
Dialogue: 0,0:07:13.06,0:07:15.99,02_chi,#1,0,0,0,,畢竟她可是領航員業界史上留名的天才
Dialogue: 0,0:07:25.88,0:07:27.41,01_jpn,#1,0,0,0,,こんにちは
Dialogue: 0,0:07:25.88,0:07:27.41,02_chi,#1,0,0,0,,你好
Dialogue: 0,0:07:29.20,0:07:30.42,01_jpn,#1,0,0,0,,だから私たち
Dialogue: 0,0:07:29.20,0:07:30.42,02_chi,#1,0,0,0,,所以我們想要
Dialogue: 0,0:07:30.52,0:07:32.21,01_jpn,#1,0,0,0,,あの日生まれた願いの種の
Dialogue: 0,0:07:30.52,0:07:32.21,02_chi,#1,0,0,0,,讓那天種下的
Dialogue: 0,0:07:32.27,0:07:33.90,01_jpn,#1,0,0,0,,花を咲かせたいんです
Dialogue: 0,0:07:32.27,0:07:33.90,02_chi,#1,0,0,0,,心願的種子開花
Dialogue: 0,0:07:34.27,0:07:35.88,01_jpn,#1,0,0,0,,うん、素敵だと思う
Dialogue: 0,0:07:34.27,0:07:35.88,02_chi,#1,0,0,0,,嗯，我覺得很好啊
Dialogue: 0,0:07:36.64,0:07:39.69,01_jpn,#1,0,0,0,,次はぜひ先輩方全員をお招きして
Dialogue: 0,0:07:36.64,0:07:39.69,02_chi,#1,0,0,0,,這次一定要邀請到所有的前輩們
Dialogue: 0,0:07:39.77,0:07:42.21,01_jpn,#1,0,0,0,,サプライズパーティーを成功させたい
Dialogue: 0,0:07:39.77,0:07:42.21,02_chi,#1,0,0,0,,成功辦好驚喜聚會
Dialogue: 0,0:07:43.02,0:07:45.26,01_jpn,#1,0,0,0,,あれ、サプライズ？
Dialogue: 0,0:07:43.02,0:07:45.26,02_chi,#1,0,0,0,,誒，驚喜？
Dialogue: 0,0:07:45.75,0:07:48.23,01_jpn,#1,0,0,0,,私聞いちゃっていいのかな
Dialogue: 0,0:07:45.75,0:07:48.23,02_chi,#1,0,0,0,,我都知道了，沒關係嗎
Dialogue: 0,0:07:48.49,0:07:51.87,01_jpn,#1,0,0,0,,それが、ちょっと気になることがありまして
Dialogue: 0,0:07:48.49,0:07:51.87,02_chi,#1,0,0,0,,其實，現在有個問題讓我們很發愁
Dialogue: 0,0:07:52.09,0:07:55.94,01_jpn,#1,0,0,0,,で、この際、灯里さんへのサプライズはなくなってしまいますが
Dialogue: 0,0:07:52.09,0:07:55.94,02_chi,#1,0,0,0,,所以，這次只好犧牲掉給你的驚喜
Dialogue: 0,0:07:56.02,0:07:58.24,01_jpn,#1,0,0,0,,ぶっちゃけご相談してしまおうかと
Dialogue: 0,0:07:56.02,0:07:58.24,02_chi,#1,0,0,0,,說白了，就是想找你一起商量一下
Dialogue: 0,0:07:58.54,0:07:59.40,01_jpn,#1,0,0,0,,なるほど
Dialogue: 0,0:07:58.54,0:07:59.40,02_chi,#1,0,0,0,,是這樣啊
Dialogue: 0,0:07:59.88,0:08:01.36,01_jpn,#1,0,0,0,,で、気になることって？
Dialogue: 0,0:07:59.88,0:08:01.36,02_chi,#1,0,0,0,,那你們在發愁什麼呢？
Dialogue: 0,0:08:02.12,0:08:05.41,01_jpn,#1,0,0,0,,実は、最近アテナさんが元気ないんです
Dialogue: 0,0:08:02.12,0:08:05.41,02_chi,#1,0,0,0,,雅典娜最近總是沒什麼精神
Dialogue: 0,0:08:05.67,0:08:06.45,01_jpn,#1,0,0,0,,そうなの？
Dialogue: 0,0:08:05.67,0:08:06.45,02_chi,#1,0,0,0,,是嗎？
Dialogue: 0,0:08:06.68,0:08:07.50,01_jpn,#1,0,0,0,,はい
Dialogue: 0,0:08:06.68,0:08:07.50,02_chi,#1,0,0,0,,是的
Dialogue: 0,0:08:08.26,0:08:10.20,01_jpn,#1,0,0,0,,それに、アリスさんが…
Dialogue: 0,0:08:08.26,0:08:10.20,02_chi,#1,0,0,0,,而且，愛莉絲……
Dialogue: 0,0:08:10.34,0:08:13.38,01_jpn,#1,0,0,0,,アテナさんに会いたくないみたいなんです
Dialogue: 0,0:08:10.34,0:08:13.38,02_chi,#1,0,0,0,,好像在躲著雅典娜
Dialogue: 0,0:08:15.24,0:08:17.26,01_jpn,#1,0,0,0,,一緒にお手紙を届けに行こう
Dialogue: 0,0:08:15.24,0:08:17.26,02_chi,#1,0,0,0,,那天明明約好了要一起去
Dialogue: 0,0:08:17.40,0:08:18.50,01_jpn,#1,0,0,0,,って言った日も
Dialogue: 0,0:08:17.40,0:08:18.50,02_chi,#1,0,0,0,,給雅典娜送信，結果……
Dialogue: 0,0:08:19.64,0:08:21.83,01_jpn,#1,0,0,0,,アーニャちゃん行ってきてくれる？
Dialogue: 0,0:08:19.64,0:08:21.83,02_chi,#1,0,0,0,,阿妮亞，你能代我去一趟嗎
Dialogue: 0,0:08:22.85,0:08:23.97,01_jpn,#1,0,0,0,,お仕事ですか？
Dialogue: 0,0:08:22.85,0:08:23.97,02_chi,#1,0,0,0,,還有工作嗎？
Dialogue: 0,0:08:24.18,0:08:25.57,01_jpn,#1,0,0,0,,じゃあ明日にしても…
Dialogue: 0,0:08:24.18,0:08:25.57,02_chi,#1,0,0,0,,那我們明天再去也……
Dialogue: 0,0:08:27.58,0:08:28.42,01_jpn,#1,0,0,0,,大丈夫
Dialogue: 0,0:08:27.58,0:08:28.42,02_chi,#1,0,0,0,,沒事的
Dialogue: 0,0:08:28.75,0:08:29.93,01_jpn,#1,0,0,0,,アーニャちゃんお願い
Dialogue: 0,0:08:28.75,0:08:29.93,02_chi,#1,0,0,0,,阿妮亞，就拜託你了
Dialogue: 0,0:08:35.29,0:08:36.95,01_jpn,#1,0,0,0,,あ、もしかしたら
Dialogue: 0,0:08:35.29,0:08:36.95,02_chi,#1,0,0,0,,啊，那可能是因為
Dialogue: 0,0:08:38.91,0:08:41.00,01_jpn,#1,0,0,0,,アリスちゃんはしっかりさん過ぎて
Dialogue: 0,0:08:38.91,0:08:41.00,02_chi,#1,0,0,0,,愛莉絲有些太認真了
Dialogue: 0,0:08:41.33,0:08:43.83,01_jpn,#1,0,0,0,,自分に厳しくしてしまう時があるから
Dialogue: 0,0:08:41.33,0:08:43.83,02_chi,#1,0,0,0,,她有時會過於嚴格地對待自己
Dialogue: 0,0:08:44.91,0:08:47.37,01_jpn,#1,0,0,0,,まだプリマになったばかりの頃にね
Dialogue: 0,0:08:44.91,0:08:47.37,02_chi,#1,0,0,0,,比如，她剛成為正式領航員的那段時間
Dialogue: 0,0:08:48.83,0:08:50.45,01_jpn,#1,0,0,0,,私たちに気を使って
Dialogue: 0,0:08:48.83,0:08:50.45,02_chi,#1,0,0,0,,為了顧及我們的感受
Dialogue: 0,0:08:50.73,0:08:52.29,01_jpn,#1,0,0,0,,理由もないのに電話したり
Dialogue: 0,0:08:50.73,0:08:52.29,02_chi,#1,0,0,0,,覺得不能無緣無故地給我們打電話
Dialogue: 0,0:08:52.50,0:08:54.38,01_jpn,#1,0,0,0,,会いに行ったりしちゃいけないって
Dialogue: 0,0:08:52.50,0:08:54.38,02_chi,#1,0,0,0,,或者來找我們
Dialogue: 0,0:08:54.48,0:08:56.15,01_jpn,#1,0,0,0,,我慢してたことがあって
Dialogue: 0,0:08:54.48,0:08:56.15,02_chi,#1,0,0,0,,就一直自己一個人撐著
Dialogue: 0,0:08:58.27,0:08:58.94,01_jpn,#1,0,0,0,,我慢…
Dialogue: 0,0:08:58.27,0:08:58.94,02_chi,#1,0,0,0,,一個人嗎……
Dialogue: 0,0:08:59.90,0:09:01.83,01_jpn,#1,0,0,0,,何があったかわからないけど
Dialogue: 0,0:08:59.90,0:09:01.83,02_chi,#1,0,0,0,,雖然我不知道具體發生了什麼
Dialogue: 0,0:09:02.20,0:09:03.17,01_jpn,#1,0,0,0,,二人が会って
Dialogue: 0,0:09:02.20,0:09:03.17,02_chi,#1,0,0,0,,但也只有讓她們當著面
Dialogue: 0,0:09:03.31,0:09:05.39,01_jpn,#1,0,0,0,,ちゃんと話すしかないじゃないかな
Dialogue: 0,0:09:03.31,0:09:05.39,02_chi,#1,0,0,0,,好好談談才能解決吧
Dialogue: 0,0:09:06.34,0:09:08.89,01_jpn,#1,0,0,0,,結局そういうことなんですよね
Dialogue: 0,0:09:06.34,0:09:08.89,02_chi,#1,0,0,0,,結果還是要直面這個問題啊
Dialogue: 0,0:09:09.23,0:09:11.51,01_jpn,#1,0,0,0,,二人が絶対に来たくなるようなパーティーに
Dialogue: 0,0:09:09.23,0:09:11.51,02_chi,#1,0,0,0,,也就是說要辦成
Dialogue: 0,0:09:11.61,0:09:13.30,01_jpn,#1,0,0,0,,するしかないってことね
Dialogue: 0,0:09:11.61,0:09:13.30,02_chi,#1,0,0,0,,兩人都絕對會參加的聚會才行
Dialogue: 0,0:09:14.84,0:09:17.44,01_jpn,#1,0,0,0,,絶対に来る何か
Dialogue: 0,0:09:14.84,0:09:17.44,02_chi,#1,0,0,0,,絕對會參加的理由
Dialogue: 0,0:09:21.91,0:09:23.29,01_jpn,#1,0,0,0,,お誕生パーティー
Dialogue: 0,0:09:21.91,0:09:23.29,02_chi,#1,0,0,0,,生日宴會
Dialogue: 0,0:09:23.23,0:09:40.40,com_lh,#1,0,0,0,,{\fs40\1c&H6f8584&\b1\frx0\fry352\frz352.6\fsp15\pos(1408,764)}謝謝光臨
Dialogue: 0,0:09:23.23,0:09:40.40,com_lh,#1,0,0,0,,{\fs25\1c&H6f8584&\b1\frx0\fry352\fsp5v\frz351.3\pos(1384,936)}祝您有個愉快的一天
Dialogue: 0,0:09:24.93,0:09:26.76,01_jpn,#1,0,0,0,,アリス先輩の誕生日！
Dialogue: 0,0:09:24.93,0:09:26.76,02_chi,#1,0,0,0,,愛莉絲前輩的生日！
Dialogue: 0,0:09:28.72,0:09:31.75,01_jpn,#1,0,0,0,,…は9月1日で、もう過ぎてしまいましたし
Dialogue: 0,0:09:28.72,0:09:31.75,02_chi,#1,0,0,0,,是9月1日，已經過了
Dialogue: 0,0:09:32.85,0:09:33.90,01_jpn,#1,0,0,0,,アテナさんは？
Dialogue: 0,0:09:32.85,0:09:33.90,02_chi,#1,0,0,0,,雅典娜呢？
Dialogue: 0,0:09:34.52,0:09:36.02,01_jpn,#1,0,0,0,,12月24日
Dialogue: 0,0:09:34.52,0:09:36.02,02_chi,#1,0,0,0,,12月24日
Dialogue: 0,0:09:37.64,0:09:38.95,01_jpn,#1,0,0,0,,だいぶ先です
Dialogue: 0,0:09:37.64,0:09:38.95,02_chi,#1,0,0,0,,這還遠著呢
Dialogue: 0,0:09:47.63,0:09:49.02,01_jpn,#1,0,0,0,,屋形船？
Dialogue: 0,0:09:47.63,0:09:49.02,02_chi,#1,0,0,0,,遊船？
Dialogue: 0,0:09:49.74,0:09:51.08,01_jpn,#1,0,0,0,,レデントーレ
Dialogue: 0,0:09:49.74,0:09:51.08,02_chi,#1,0,0,0,,救世主節
Dialogue: 0,0:09:51.45,0:09:53.71,01_jpn,#1,0,0,0,,ほほ、レデントーレだと？
Dialogue: 0,0:09:51.45,0:09:53.71,02_chi,#1,0,0,0,,哦，救世主節？
Dialogue: 0,0:09:55.76,0:09:56.85,01_jpn,#1,0,0,0,,暁さん
Dialogue: 0,0:09:55.76,0:09:56.85,02_chi,#1,0,0,0,,曉
Dialogue: 0,0:09:57.21,0:09:59.40,01_jpn,#1,0,0,0,,今日もお買い物の途中ですか？
Dialogue: 0,0:09:57.21,0:09:59.40,02_chi,#1,0,0,0,,你今天也下來買東西嗎？
Dialogue: 0,0:10:01.78,0:10:04.48,01_jpn,#1,0,0,0,,俺様はアクアの気候を守るサラマンダーとして
Dialogue: 0,0:10:01.78,0:10:04.48,02_chi,#1,0,0,0,,本大爺可是守護水星氣候的看火人
Dialogue: 0,0:10:04.63,0:10:06.25,01_jpn,#1,0,0,0,,忙しい日々を送っているんで
Dialogue: 0,0:10:04.63,0:10:06.25,02_chi,#1,0,0,0,,每天都很忙的
Dialogue: 0,0:10:06.46,0:10:08.07,01_jpn,#1,0,0,0,,全く暇じゃないんだが
Dialogue: 0,0:10:06.46,0:10:08.07,02_chi,#1,0,0,0,,雖然我完全沒有空閒
Dialogue: 0,0:10:08.56,0:10:10.07,01_jpn,#1,0,0,0,,様子を見に来てやったんだ
Dialogue: 0,0:10:08.56,0:10:10.07,02_chi,#1,0,0,0,,但還是決定來你這兒看看
Dialogue: 0,0:10:10.56,0:10:12.02,01_jpn,#1,0,0,0,,ありがとうございます
Dialogue: 0,0:10:10.56,0:10:12.02,02_chi,#1,0,0,0,,謝謝你
Dialogue: 0,0:10:12.34,0:10:13.17,01_jpn,#1,0,0,0,,だれ
Dialogue: 0,0:10:12.34,0:10:13.17,02_chi,#1,0,0,0,,這誰啊
Dialogue: 0,0:10:13.35,0:10:14.54,01_jpn,#1,0,0,0,,暑苦しいです
Dialogue: 0,0:10:13.35,0:10:14.54,02_chi,#1,0,0,0,,熱情過頭了吧
Dialogue: 0,0:10:14.93,0:10:16.60,01_jpn,#1,0,0,0,,シベリア送りにしたいです
Dialogue: 0,0:10:14.93,0:10:16.60,02_chi,#1,0,0,0,,真想送他去西伯利亞
Dialogue: 0,0:10:17.36,0:10:19.83,01_jpn,#1,0,0,0,,まあ、しかしレデントーレとなれば
Dialogue: 0,0:10:17.36,0:10:19.83,02_chi,#1,0,0,0,,不過，既然是難得的救世主節
Dialogue: 0,0:10:19.99,0:10:22.33,01_jpn,#1,0,0,0,,お前たちのために無理やり時間をあけて
Dialogue: 0,0:10:19.99,0:10:22.33,02_chi,#1,0,0,0,,特意為你們擠出點時間來也不是……
Dialogue: 0,0:10:22.57,0:10:23.94,01_jpn,#1,0,0,0,,あの暁さん
Dialogue: 0,0:10:22.57,0:10:23.94,02_chi,#1,0,0,0,,那個，曉
Dialogue: 0,0:10:26.76,0:10:28.36,01_jpn,#1,0,0,0,,もう誰もいないです
Dialogue: 0,0:10:26.76,0:10:28.36,02_chi,#1,0,0,0,,她們都已經走了
Dialogue: 0,0:10:28.86,0:10:30.90,01_jpn,#1,0,0,0,,うん、仕方ない
Dialogue: 0,0:10:28.86,0:10:30.90,02_chi,#1,0,0,0,,唔，算了
Dialogue: 0,0:10:31.05,0:10:32.52,01_jpn,#1,0,0,0,,では、もみ子のお茶タイムに
Dialogue: 0,0:10:31.05,0:10:32.52,02_chi,#1,0,0,0,,那我就勉為其難陪鬢子
Dialogue: 0,0:10:32.63,0:10:33.77,01_jpn,#1,0,0,0,,でも付き合ってやるか
Dialogue: 0,0:10:32.63,0:10:33.77,02_chi,#1,0,0,0,,一起喝茶打發一下時間吧
Dialogue: 0,0:10:34.43,0:10:36.52,01_jpn,#1,0,0,0,,私も今からお仕事です
Dialogue: 0,0:10:34.43,0:10:36.52,02_chi,#1,0,0,0,,我馬上也要去工作了
Dialogue: 0,0:10:44.34,0:10:46.84,01_jpn,#1,0,0,0,,ここから教会まで橋がかかって
Dialogue: 0,0:10:44.34,0:10:46.84,02_chi,#1,0,0,0,,節日當天，會從這裡架橋到對岸的教堂
Dialogue: 0,0:10:47.01,0:10:48.86,01_jpn,#1,0,0,0,,人やたくさんの船で溢れる
Dialogue: 0,0:10:47.01,0:10:48.86,02_chi,#1,0,0,0,,許多人和船隻都會聚集在這裡
Dialogue: 0,0:10:49.14,0:10:50.20,01_jpn,#1,0,0,0,,それと花火
Dialogue: 0,0:10:49.14,0:10:50.20,02_chi,#1,0,0,0,,還會有煙花表演
Dialogue: 0,0:10:50.27,0:10:52.57,01_jpn,#1,0,0,0,,後美味しい料理とおもてなしがあれば
Dialogue: 0,0:10:50.27,0:10:52.57,02_chi,#1,0,0,0,,要是再加上美食和用心的招待的話……
Dialogue: 0,0:10:52.80,0:10:55.82,01_jpn,#1,0,0,0,,あり、超あり、盛り上がるよ
Dialogue: 0,0:10:52.80,0:10:55.82,02_chi,#1,0,0,0,,可行，絕對可行，大家會很盡興的
Dialogue: 0,0:10:56.17,0:10:58.97,01_jpn,#1,0,0,0,,きっと二人の心にも橋がかかるね
Dialogue: 0,0:10:56.17,0:10:58.97,02_chi,#1,0,0,0,,一定也能架起連接兩人內心的橋樑
Dialogue: 0,0:10:58.99,0:11:00.33,01_jpn,#1,0,0,0,,こりゃやるきゃ…
Dialogue: 0,0:10:58.99,0:11:00.33,02_chi,#1,0,0,0,,那就趕緊准……
Dialogue: 0,0:11:05.11,0:11:06.09,01_jpn,#1,0,0,0,,どうかした？
Dialogue: 0,0:11:05.11,0:11:06.09,02_chi,#1,0,0,0,,怎麼啦？
Dialogue: 0,0:11:07.01,0:11:09.30,01_jpn,#1,0,0,0,,レデントーレの日なんだけど…
Dialogue: 0,0:11:07.01,0:11:09.30,02_chi,#1,0,0,0,,救世主節當天……
Dialogue: 0,0:11:09.73,0:11:11.61,01_jpn,#1,0,0,0,,無理
Dialogue: 0,0:11:09.73,0:11:11.61,02_chi,#1,0,0,0,,不行
Dialogue: 0,0:11:12.03,0:11:14.01,01_jpn,#1,0,0,0,,その日はレデントーレフェアをやるって
Dialogue: 0,0:11:12.03,0:11:14.01,02_chi,#1,0,0,0,,我跟你說過救世主節那天
Dialogue: 0,0:11:14.18,0:11:15.51,01_jpn,#1,0,0,0,,言ってあったでしょう
Dialogue: 0,0:11:14.18,0:11:15.51,02_chi,#1,0,0,0,,要辦節日活動的吧
Dialogue: 0,0:11:15.64,0:11:17.60,01_jpn,#1,0,0,0,,はい、そうでした
Dialogue: 0,0:11:15.64,0:11:17.60,02_chi,#1,0,0,0,,沒錯，確實提過呢
Dialogue: 0,0:11:17.80,0:11:19.87,01_jpn,#1,0,0,0,,お祭りの時までご苦労様です
Dialogue: 0,0:11:17.80,0:11:19.87,02_chi,#1,0,0,0,,節日也這麼忙，辛苦你了
Dialogue: 0,0:11:20.07,0:11:20.66,01_jpn,#1,0,0,0,,支店長
Dialogue: 0,0:11:20.07,0:11:20.66,02_chi,#1,0,0,0,,分店長
Dialogue: 0,0:11:21.34,0:11:22.92,01_jpn,#1,0,0,0,,心配してくれなくても
Dialogue: 0,0:11:21.34,0:11:22.92,02_chi,#1,0,0,0,,不用替我操心
Dialogue: 0,0:11:23.04,0:11:25.06,01_jpn,#1,0,0,0,,あんたにも手伝ってもらうから
Dialogue: 0,0:11:23.04,0:11:25.06,02_chi,#1,0,0,0,,那天你也得來幫忙
Dialogue: 0,0:11:25.33,0:11:26.98,01_jpn,#1,0,0,0,,あ、やっぱり
Dialogue: 0,0:11:25.33,0:11:26.98,02_chi,#1,0,0,0,,啊，果然啊
Dialogue: 0,0:11:27.62,0:11:28.32,01_jpn,#1,0,0,0,,というわけで
Dialogue: 0,0:11:27.62,0:11:28.32,02_chi,#1,0,0,0,,就是這樣
Dialogue: 0,0:11:28.51,0:11:30.08,01_jpn,#1,0,0,0,,レデントーレは却下
Dialogue: 0,0:11:28.51,0:11:30.08,02_chi,#1,0,0,0,,救世主節——不行
Dialogue: 0,0:11:30.37,0:11:31.75,01_jpn,#1,0,0,0,,無理か
Dialogue: 0,0:11:30.37,0:11:31.75,02_chi,#1,0,0,0,,行不通嗎
Dialogue: 0,0:11:33.55,0:11:35.75,01_jpn,#1,0,0,0,,っていうか、藍華さん、あんたたち二人にも
Dialogue: 0,0:11:33.55,0:11:35.75,02_chi,#1,0,0,0,,況且，藍華好像還想讓你們兩個
Dialogue: 0,0:11:35.90,0:11:37.38,01_jpn,#1,0,0,0,,手伝ってもらうみたいよ
Dialogue: 0,0:11:35.90,0:11:37.38,02_chi,#1,0,0,0,,也一起來幫忙
Dialogue: 0,0:11:39.44,0:11:42.23,01_jpn,#1,0,0,0,,ああ、早くも大ピンチ
Dialogue: 0,0:11:39.44,0:11:42.23,02_chi,#1,0,0,0,,啊啊，一下子就走投無路了
Dialogue: 0,0:12:00.94,0:12:04.07,01_jpn,#1,0,0,0,,今日も一日お疲れ様でした、まあ社長
Dialogue: 0,0:12:00.94,0:12:04.07,02_chi,#1,0,0,0,,今天也辛苦你了，嘛社長
Dialogue: 0,0:12:09.60,0:12:12.66,01_jpn,#1,0,0,0,,アーニャちゃんまだ戻ってないみたいですね
Dialogue: 0,0:12:09.60,0:12:12.66,02_chi,#1,0,0,0,,阿妮亞好像還沒回來呢
Dialogue: 0,0:12:21.24,0:12:22.55,01_jpn,#1,0,0,0,,アテナ先輩
Dialogue: 0,0:12:21.24,0:12:22.55,02_chi,#1,0,0,0,,雅典娜前輩
Dialogue: 0,0:12:33.36,0:12:36.36,01_jpn,#1,0,0,0,,痛っ
Dialogue: 0,0:12:33.36,0:12:36.36,02_chi,#1,0,0,0,,好痛
Dialogue: 0,0:12:36.70,0:12:38.51,01_jpn,#1,0,0,0,,がんばっ、アテナ！
Dialogue: 0,0:12:36.70,0:12:38.51,02_chi,#1,0,0,0,,雅典娜，加油！
Dialogue: 0,0:12:38.51,0:12:39.53,01_jpn,#1,0,0,0,,……あの？
Dialogue: 0,0:12:38.51,0:12:39.53,02_chi,#1,0,0,0,,請問……
Dialogue: 0,0:12:39.61,0:12:41.59,01_jpn,#1,0,0,0,,大丈夫ですか、ほっぺ…
Dialogue: 0,0:12:39.61,0:12:41.59,02_chi,#1,0,0,0,,沒事吧？您的臉……
Dialogue: 0,0:12:44.49,0:12:45.28,01_jpn,#1,0,0,0,,ノックしても
Dialogue: 0,0:12:44.49,0:12:45.28,02_chi,#1,0,0,0,,我敲了門卻沒有動靜
Dialogue: 0,0:12:45.42,0:12:46.48,01_jpn,#1,0,0,0,,お返事がなくて
Dialogue: 0,0:12:45.42,0:12:46.48,02_chi,#1,0,0,0,,就自己進來了
Dialogue: 0,0:12:47.84,0:12:49.00,01_jpn,#1,0,0,0,,はじめまして
Dialogue: 0,0:12:47.84,0:12:49.00,02_chi,#1,0,0,0,,初次見面
Dialogue: 0,0:12:49.58,0:12:52.95,01_jpn,#1,0,0,0,,今日からこの部屋でご一緒させていただくことになった
Dialogue: 0,0:12:49.58,0:12:52.95,02_chi,#1,0,0,0,,我是今天開始入住這間宿舍的新人
Dialogue: 0,0:12:53.28,0:12:54.60,01_jpn,#1,0,0,0,,アリス・キャロル
Dialogue: 0,0:12:53.28,0:12:54.60,02_chi,#1,0,0,0,,愛莉絲·卡羅爾
Dialogue: 0,0:13:00.99,0:13:02.26,01_jpn,#1,0,0,0,,大丈夫…ですか？
Dialogue: 0,0:13:00.99,0:13:02.26,02_chi,#1,0,0,0,,您沒事吧？
Dialogue: 0,0:13:05.38,0:13:07.47,01_jpn,#1,0,0,0,,ダメなのかもしれません
Dialogue: 0,0:13:05.38,0:13:07.47,02_chi,#1,0,0,0,,我可能不太行
Dialogue: 0,0:13:13.53,0:13:15.18,01_jpn,#1,0,0,0,,しっかりしてるのね
Dialogue: 0,0:13:13.53,0:13:15.18,02_chi,#1,0,0,0,,你既能幹又懂事啊
Dialogue: 0,0:13:15.33,0:13:16.13,01_jpn,#1,0,0,0,,普通です
Dialogue: 0,0:13:15.33,0:13:16.13,02_chi,#1,0,0,0,,一般般
